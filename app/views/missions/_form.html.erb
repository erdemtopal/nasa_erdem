<%= form_with(model: mission) do |form| %>
  <% if mission.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(mission.errors.count, "error") %> prohibited this mission from being saved:</h2>

      <ul>
        <% mission.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Mission Name", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :"Weight of Equipment", style: "display: block" %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :"First Destination", style: "display: block" %>
    <%= form.select :firstlocation, ["Moon", "Mars"] %>
  </div>

  <div>
    <%= form.label :"Second Destination", style: "display: block" %>
    <%= form.select :secondlocation, ["We don't have second location", "Moon", "Mars"] %>
  </div>

  <div>
    <% form.label :fuel, style: "display: block" %>
    <% form.number_field :fuel %>
  </div>

  <div>
    <% form.label :error, style: "display: block" %>
    <% form.text_field :error %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
